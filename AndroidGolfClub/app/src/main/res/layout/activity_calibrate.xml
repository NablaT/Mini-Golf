<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/golf_club"
    tools:context="polytech.androidgolfclub.CalibrateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/calibratelongtext"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:text="@string/btntocalibrate"
        android:layout_height="100dp"
        android:id="@+id/btncalibrate"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_ball_texture"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="calibrate" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="66dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="Retour au menu principal"
        android:id="@+id/button5"
        android:background="@drawable/btn_ball_texture"
        android:onClick="backClick"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
