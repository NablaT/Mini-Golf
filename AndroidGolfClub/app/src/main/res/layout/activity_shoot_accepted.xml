<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/golf_club"
    tools:context="polytech.androidgolfclub.ShootAcceptedActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tir réussi !"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewForce"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="20sp"
        android:textColor="#b71c1c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour au menu principal"
        android:id="@+id/btnGoMenu"
        android:onClick="goMainMenu"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_ball_texture"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnDisplayResults"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Afficher mon tir"
        android:id="@+id/btnDisplayResults"
        android:layout_above="@+id/btnGoMenu"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_ball_texture"
        android:onClick="goDisplayResults"
        android:layout_alignEnd="@+id/btnReshoot"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Tirer à nouveau"
        android:id="@+id/btnReshoot"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_ball_texture"
        android:layout_above="@+id/btnDisplayResults"
        android:onClick="goShoot"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
